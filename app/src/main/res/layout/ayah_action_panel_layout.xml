<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/transparent_actionbar_color">

    <ImageView
        android:id="@+id/sliding_menu_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="?attr/actionModeCloseButtonStyle"
        android:focusable="true"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="?attr/actionModeCloseDrawable" />

    <HorizontalScrollView
        android:id="@+id/sliding_menu_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sliding_menu_close"
        android:scrollbars="none">
        <!--Menu view added here in runtime -->
    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/sliding_layout_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sliding_menu_close"/>

</RelativeLayout>